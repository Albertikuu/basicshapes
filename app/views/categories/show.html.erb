<div class="container">

  <div class="row">

<!-- Left Column -->
  <%= render "frames/side" %>

<!-- Main body -->

    <div class="eight columns frame main-container">

      <div class="row category-header">

        <div class="six columns">
          <h6 class="category-title"><%= @category.title.capitalize %></h6>
        </div>

        <div class="six columns category-title info--right">
          <%= link_to 'Delete category', category_path(@category.title), method: :delete, class: "menu__text" %>
        </div>

        <div class="twelve columns">

          <p class="categories-description"><%= @category.description %></p>

        </div>

      </div>

      <div class="main-container row--dark">

        <ul class="row">

          <li class="three columns">
            <div class="mini-card">
              <h2 class="title">Brand</h2>
              <p class="description">Visual identity</p>

              <div class="mini-card-info">
                <p class="versions">3 versions</p>
                <p class="commits">2 commits</p>
              </div>
            </div>
          </li>

          <li class="three columns">
            <div class=" mini-card">
              <h2 class="title">Brand</h2>
              <p class="description">Visual identity</p>

              <div class="mini-card-info">
                <p class="versions">3 versions</p>
                <p class="commits">2 commits</p>
              </div>
            </div>
          </li>

        </ul>



      </div>



        <!-- note: Add amdin authentication here -->

      <div class="row">

        <ul class="users-list">

          <% @category.users.each do |u| %>
          <li class="user"><%= link_to u.first_char, user_path(u) %></li>
          <% end %>

        </ul>

        <ul class="add-user">

          <li>
            <a href="#" id="addusers-js"><span class="menu__text">Add users</span></a>
          </li>

          <% @team_users.each do |user| %>
           <li> <%= link_to user.full_name, category_add_user_path(title: params[:title], user_id: user.id), method: :post %> </li>
          <% end %>

        </ul>

      </div>

    </div>
<!-- Empty Column -->

    <div class="one column empty"> Empty Column </div>


  </div>

</div>
