<div class="container">

  <div class="row">

<!-- Left Column -->

  <%= render "frames/side" %>


<!-- Main body -->

    <div class="eight columns frame main-container">

    <div class="create-category-row">
      <h6 class="breadcrumb">Create page</h6>
      <p class="description">Pages are the unit of your guides. Create a new page and let your team know by committing it!</p>
    </div>

	  <%= form_tag({}, { :class => "create-page"}) do %>
	  <div>

	    <label for="Commit title" >Title</label>
	    <input type="text" id="commit_title"
	      class="form-control">

	  </div>


          <input type="hidden" id="commit_user" value="<%= current_user.id %>">
          <input type="hidden" id="linked_version" value="<%= params[:version_id] %>">
          <input type="hidden" id="linked_page" value="<%= params[:page_id] %>">
          <label for="image">Upload a picture (optional)</label>
		  <input id="commit_image" type="file">

	    <div>
	      <textarea class="froala"></textarea>
	    </div>

	    <div class="actions">

	      <button class="btn btn--primary btn--right btn-commit-js">
	  	    Commit
	  	  </button>

	    </div>

	<% end %>

    </div>

  </div>

</div>
