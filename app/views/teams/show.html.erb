<div class="container">

  <div class="row">


<!-- Left Column -->
  <%= render "frames/side" %>

<!-- Main body -->

    <div class="eight columns frame">


    <h1 id="team_name"><%= @team.name.capitalize %></h1>

    <h4> Categories in this team </h4>

      <ul>
        <% @team.categories.each do |c| %>
        <li><%= link_to c.title.capitalize, category_display_path(@team.name, c.title)%></li>
        <% end %>
      </ul>

    <h4>Users in this team</h4>
      <ul>
        <% @team.users.each do |u| %>
        <li><%= link_to u.full_name, user_path(u)%> <a class="remove-member-js" id="<%= u.id %>">(x)</a></li>
        <% end %>
      </ul>

    </div>

  </div>

</div>

<script type="text/javascript">
  $('.remove-member-js').on('click', removeMember)
</script>
