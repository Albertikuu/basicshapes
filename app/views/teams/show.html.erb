<div class="container">

  <div class="row">


<!-- Left Column -->
  <%= render "frames/side" %>

<!-- Main body -->

    <div class="eight columns frame main-container">

      <div class="row row-no-padding">

        <div class="six columns">
          <h1 class="title team_name"><%= @team.name.capitalize %></h1>
        </div>

        <div class="six columns info--right">
          <%= link_to team_path(@team.slug), method: :delete, data: {confirm: "If you delete the team, all your private and public pages will be lost forever. Are you sure you want to continue"} do %>
          <span><%= render :partial => 'svg/bin' %></span>
          <% end %>
        </div>

      </div>

      <div class="row row-no-padding">

        <div class="twelve columns">

          <h4> Categories in this team </h4>

            <ul class="category-list">
              <% @team.categories.each do |c| %>
              <li><%= link_to c.title.capitalize, category_display_path(@team.name, c.title)%></li>
              <% end %>
            </ul>

        </div>

      </div>

      <div class="row">

        <div class="twelve columns">

          <h4>Users in this team</h4>

          <ul class="users-list">
            <% @team.users.each do |u| %>
              <li class="user">
                <% if u.avatar_file_name %>
                  <%= link_to user_path(u) do %>
                    <%= image_tag u.avatar.url(:medium) %>
                  <% end %>
                <% else %>
                    <%= link_to u.first_char, user_path(u), class: "link" %>
                <% end %>
                <a class="remove-member-js" id="<%= u.id %>" data-team="<%= @team.slug %>" >(x)</a>
              </li>
            <% end %>
          </ul>

          <% if flash %>
            <em><%= flash[:error] %></em>
          <% end %>

        </div>

      </div>

      </div>
    </div>

  </div>

</div>
