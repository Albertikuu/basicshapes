<div class="container">

  <div class="row">

<!-- Left Column -->

  <%= render "frames/side" %>


<!-- Main body -->

    <% if flash[:alert] %>
        <div class="eight columns frame main-container">
          <p><b><%= flash[:alert] %> </b></p>
        </div>
    <% end %>

    <div class="eight columns frame main-container">

      <div class="row">

        <div class="twelve columns">
          <h6 class="breadcrumb">Create a new Team</h6>
        </div>

        <div class="twelve columns">
          <p class="categories-description">Teams share categories, members and the Guidlines Control. To start using Basicshapes, create a Team and add your colleagues or friends to it to start working on your documentation.</p>
        </div>

      </div>

      <div class="row">

        <div class="twelve columns">

          <%= form_tag({}, { :class => "create-team"}) do %>
      	  <div>

      	    <label for="Team name" >Team</label>
      	    <input type="text" name="team[title]" id="team_name"
      	      class="form-control">

      	  </div>

          <div>
            <label for="participants">Invite Team Members</label>
             <input type="text" name="participants" id="participants-invite-js"
             placeholder="Add one or more email addresses, separated by a comma"
      	   class="form-control">

          </div>

          <div>
            <label for="logos">Upload a logo</label>
            <%= form_for @team, url: teams_path, html: { multipart: true } do |form| %>
              <%= form.file_field :logo %>
            <% end %>
          </div>

        </div>

        <div class="twelve columns">

          <div class="actions">

            <button class="btn btn--primary btn--right btn-teams-js">
        	    Save
        	  </button>

          </div>
        </div>

      </div>
	<% end %>

    </div>

  </div>

</div>

<script type="text/javascript">
	$('.btn-teams-js').on('click', createTeam)
</script>
