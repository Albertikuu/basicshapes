<style>
.prov_selected a {text-decoration: underline;}
</style>


<div class="three columns main-nav">
     <!-- the following teams menu can probs be changed with Javascript / Ajax Calls -->

  <% if current_user.teams.size != 0 && session[:current_team] %>

        <% current_user.teams.each do |team| %>

         <div class="category-left list <% if team.name == session[:current_team]["name"] %> prov_selected <% end %>" >
             <div class="icons"><%= render :partial => 'svg/folder' %></div>
              <%= link_to team.name.capitalize, "/#{team.slug}", :method => :post %>
         </div>

        <% end %>


        <hr class="divider">

        <div class="list">
          <span class="icons"><%= render :partial => 'svg/guidelines' %></span>
          <%= link_to "Guidelines control", root_path %>
        </div>

        <div class="list">
          <span class="icons"><%= render :partial => 'svg/guidelines' %></span>
          <%= link_to "Team details", "/#{session[:current_team]['slug']}" %>
        </div>


    <hr class="divider">

      <%= button_to "Create Category", new_category_path, method: :get, class: "btn btn--primary create" %>
      <% if session[:current_team] %>
          <% if session[:categories] == 0 %>
          <p> You don't have any active category in this team yet! </p>
          <% end %>
          <% session[:categories].each do |category| %>
          <div class="category-left list"> <div class="icons"><%= render :partial => 'svg/folder' %></div> <%= link_to category["title"].capitalize, category_display_path(session[:current_team]["slug"], category['slug']) %></div>
          <% end %>

      <% end %>

    <% else %>

      <p>To start using Basicshapes, you must create a Team or find one to join!</p>
      <hr class="divider">
      <%= button_to "Create a Team", new_team_path, method: :get, class: "btn btn--primary create" %>

    <% end %>
</div>
