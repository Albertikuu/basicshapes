<style>
.prov_selected a {text-decoration: underline;}
</style>
    

<div class="three columns">
     <!-- the following teams menu can probs be changed with Javascript / Ajax Calls -->

  <% if current_user.teams.size != 0 %>
        <div class="menu sidebar">
            <ul>                 
                  <% current_user.teams.each do |team| %>
                  <li class="<% if team.name == session[:current_team]["name"] %> prov_selected <% end %>">
                    <%= link_to team.name.capitalize, "/#{team.name}", :method => :post %>
                  </li>
                  <% end %>
            </ul>
        </div>

        <% current_user.teams.each do |team| %>

         <div class="category-left list <% if team.name == session[:current_team]["name"] %> prov_selected <% end %>" >
             <div class="icons"><%= render :partial => 'svg/folder' %></div>
              <%= link_to team.name.capitalize, "/#{team.name}", :method => :post %>
         </div>

        <% end %>


        <hr class="divider">

        <div class="icons"><%= render :partial => 'svg/guidelines' %></div>
        <%= link_to "Guidelines control", root_path %>

        <br />

        <div class="icons"><%= render :partial => 'svg/guidelines' %></div>
        <%= link_to "Team details", "/#{session[:current_team]['name']}" %>


  <% end %>
    <hr class="divider">

      <%= button_to "Create Category", new_category_path, method: :get, class: "btn btn--primary create" %>
      <% if session[:current_team] %>
          <% if session[:categories] == 0 %>
          <p> You don't have any active category in this team yet! </p>
          <% end %>
          <% session[:categories].each do |category| %>
          <div class="category-left list"> <div class="icons"><%= render :partial => 'svg/folder' %></div> <%= link_to category["title"].capitalize, category_display_path(session[:current_team]["name"], category['title']) %></div>
          <% end %>
      <% else %>
        <p>No team selected</p>
      <% end %>

</div>

